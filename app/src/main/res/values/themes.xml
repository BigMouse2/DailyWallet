<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyWallet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:actionBarItemBackground">@drawable/gradient_drawable</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- AppBar color -->

        <!-- ButtonStyle -->
        <item name="android:buttonStyle">@style/MainThemeButtonStyle</item>

        <!-- Font Family -->
        <item name="android:actionBarTabBarStyle">@style/IcebergTextViewStyle</item>
        <item name="android:textViewStyle">@style/AbelTextViewStyle</item>

    </style>

    <!-- Boot screen application theme. -->
    <style name="Theme.DailyWallet.Bootscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Style -->
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonStyle">@style/BootThemeButtonStyle</item>

        <!-- Font Family -->
        <item name="android:actionBarTabBarStyle">@style/IcebergTextViewStyle</item>
        <item name="android:textViewStyle">@style/AbelTextViewStyle</item>
    </style>

    <!-- ButtonStyle -->
    <style name="BootThemeButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/iceberg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainThemeButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/abel</item>
    </style>

    <!-- ResearchBar Style -->
    <style name="Theme.DailyWallet.Research" parent="Theme.DailyWallet.AppBarOverlay">
        <item name="android:textColor">@color/black</item>
        <item name="android:color">@color/black</item>

    </style>

    <!-- ActionBar Style -->
    <style name="Theme.DailyWallet.AppBar" parent="android:Widget.ActionBar">
        <item name="android:fontFamily">@font/iceberg</item>
        <item name="android:background">@drawable/gradient_drawable</item>
    </style>

    <!-- Font Style -->
    <style name="AbelTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/abel</item>
    </style>

    <style name="IcebergTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/iceberg</item>
    </style>


    <!-- NoActionbarTheme -->
    <style name="Theme.DailyWallet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.DailyWallet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DailyWallet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>